{
  "author": "Developer Express Inc.",
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "description": "DevExtreme Vue UI and Visualization Components",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevExpress/devextreme-vue.git"
  },
  "scripts": {
    "clean": "npm run clean:packages && npm run clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:root": "del-cli node_modules",
    "start": "lerna run build && lerna run start",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --no-ci --hoist --force-local",
    "build": "npm run update-integration-meta && lerna run build && npm run lint",
    "lint": "gulp lint",
    "test": "npm run update-integration-meta && lerna run build && jest",
    "test-watch": "jest --watch",
    "pack": "npm run update-integration-meta && lerna run pack",
    "update-integration-meta": "dx-tools discover-ts-declarations --js-scripts ../devextreme/js && dx-tools integration-data-generator --js-scripts ../devextreme/js  --declarations-path ../../../devextreme/artifacts/internal-tools/Declarations.json --output-path ./packages/devextreme-vue/metadata/integration-data.json --version 22_1"
  },
  "keywords": [
    "vue",
    "devextreme",
    "devexpress"
  ],
  "license": "MIT",
  "devDependencies": {
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "devextreme-internal-tools": "^8.0.0-beta.2",
    "gulp": "^4.0.0",
    "gulp-tslint": "^8.1.3",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "ts-jest": "^26.5.5",
    "tslint": "^5.11.0"
  }
}
